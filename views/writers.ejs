<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UR Writer</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
  </head>
  <body>
    <!-- Header -->
    <header class="bg-primary text-white text-center py-4">
      <h1 class="display-4 fw-bold">UR Writer</h1>
      <p class="lead">Expert Urdu And Hindi Writers for Your Projects</p>
      <a href="/" class="btn btn-dark">Back</a>
    </header>

    <!-- Flash Alerts -->
    <!-- Success Alert -->
    <% if (success && success.length > 0) { %>
    <div class="container mt-4">
      <div class="row justify-content-center">
        <div
          class="alert alert-info alert-dismissible fade show col-12 col-md-8"
          role="alert">
          <%= success %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"></button>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Error Alert -->
    <% if (error && error.length > 0) { %>
    <div class="container mt-4">
      <div class="row justify-content-center">
        <div
          class="alert alert-info alert-dismissible fade show col-12 col-md-8"
          role="alert">
          <%= error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"></button>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Writers Section -->
    <div class="container my-5">
      <div class="row g-4">
        <% writers.forEach(writer => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow h-100">
            <img
              src="<%= writer.image.url %>"
              class="card-img-top"
              alt="<%= writer.name %>"
              style="object-fit: cover; height: 200px" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= writer.name %></h5>
              <p class="card-text"><%= writer.description %></p>
              <p><strong>Category:</strong> <%= writer.category %></p>
              <p>
                <strong>Date:</strong> <%= writer.createdAt.toDateString() %>
              </p>

              <a href="/contact" target="_blank" class="btn btn-success mb-2"
                >Contact</a
              >

              <form
                action="/writers/<%= writer._id %>?_method=DELETE"
                method="POST">
                <button type="submit" class="btn btn-danger w-100">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
      <p class="mb-0">Â© 2025 UR Writer. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
